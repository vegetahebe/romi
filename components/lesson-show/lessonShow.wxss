lessonShow {
  width: 100%;
  position: relative;
  top: -40px;
}

.lessonShow {
  display: flex;
  position: relative;
  margin: 10px 12px;
  border-radius: 10px;
  background-color: white;
}

.lessonShow image {
 width: 210px;
height: 95px;
padding: 18rpx;

}

.lessonInfo {
  align-items: center;
  padding: 8rpx 0rpx;
  height: 95px;
  width: 80%;
}

.showTitle {
  font-size: 13px;
  font-weight: 550;
  margin: 0, 10px;
  height: 35%;
  line-height: 17px;
  margin-top:30px;
  position: relative;
  top:5px;
}

.showTeacher {
  font-size: 15px;
  height: 20px;
}
.studied {
  font-size: 12px;
  color: gray;
  font-weight: 500;
}

.learnnow {
  position: absolute;
  right: 30rpx;
  bottom: 35rpx;
  border-radius: 40px;
  border: 3rpx solid black;
  color: black;
  font-size: 25rpx;
  font-weight: 600;
  border-color: grey;
  line-height: 25px;
  width: 80px;
  height: 25px;
}
