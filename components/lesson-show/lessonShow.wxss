lessonShow {
  width: 100%;
  position: relative;
  top: -40px;
}

.lessonShow {
  display: flex;
  position: relative;
  margin: 10px 12px;
  border-radius: 10px;
  background-color: white;
}

.lessonShow image {
  width: 120px;
  height: 95px;
  padding: 25rpx;
}

.lessonInfo {
  align-items: center;
  padding: 8rpx 0rpx;
  height: 95px;
  width: 80%;
}

.showTitle {
  font-size: 13px;
  font-weight: 550;
  margin: 0, 10px;
  height: 35%;
  display: block;
  padding: 10px 0px 0px 10px;
}

.showTeacher {
  font-size: 12px;
  display: block;
  height: 20%;
  line-height: 20px;
  padding: 0px 0 10px 10px;
}

.studied {
  font-size: 12px;
  color: gray;
  font-weight: 500;
  height: 20%;
  padding: 0px 0 15px 10px;
}

.learnnow {
  position: absolute;
  right: 30rpx;
  bottom: 35rpx;
  border-radius: 40px;
  border: 3rpx solid black;
  color: black;
  font-size: 25rpx;
  font-weight: 600;
  border-color: grey;
  line-height: 25px;
  width: 80px;
  height: 25px;
}
