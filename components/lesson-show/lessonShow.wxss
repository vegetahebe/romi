.lessonShow {
  width: 360px;
  display: flex;
  position: relative;
  margin: 10px;
  border-radius: 40px;
}
.lessonShow image {
  width: 100px;
  height: 95px;
  padding: 0;
}

.lessonInfo {
  align-items: center;
background-color: white;
  height: 95px;
  width: 80%;
}

.showTitle {
  font-size: 15px;
  font-weight: 550;
  margin: 0, 10px;
  height: 35%;
  display: block;
  padding: 10px 0px 0px 10px;
}

.showTeacher {
  display: block;
  height: 20%;
  line-height: 20px;
  padding: 0px 0 10px 10px;
}

.studied {
  font-size: 12px;
  color: gray;
  font-weight: 500;
  height: 20%;
  padding: 0px 0 15px 10px;
}

.learnnow {
  position: absolute;
  left: 280px;
  top: 60px;
  border-radius: 40px;
  border: 3rpx solid black;
  color: black;
  font-size: 22rpx;
  font-weight: 500;
  border-color: grey;
  line-height: 28px;
}
