/* components/lesson-show2/lessonShow2.wxss */

lessonShow2 {
  width: 95%;
}

.lessonshow2Box {
  width: 95%;
  box-sizing: border-box;
  display: inline-block;
}

.lessonshow2Box image {
  width: 100%;
  height: 65%;
  border-radius: 10px;
}

.lessonshow2List {
  display: grid;
  grid-template: repeat(2, 350rpx)/repeat(2, 1fr);
}

.lessonshow2Lessonname {
  font-size: 35rpx;
  font-weight: 600;
  color: #3e3a39;
  line-height: 35rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding-top: 5px;
}

.lessonshow2Lessonteacher {
  color: #707272;
  font-weight: 500;
  font-size: 30rpx;
  padding-top: 5px;

}
