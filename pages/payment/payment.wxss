/* pages/payment/payment.wxss */
page {
  background-color:rgb(220, 220, 220)
}

.paymentTitle {
  width: 100%;
  height: 50px;
  background: rgb(71, 0, 184);
  color: white;
  font-size: 22px;
  line-height: 50px;
  font-weight: 550;
  text-align: center;
  margin-bottom: 30px;
}
.paylist{
  display: flex;
}
.paylist image{
  width: 45%;
  height: 86px;
  margin: 24px;
}
.itemname{
  color:rgb(91, 91, 91);
  font-size: 26px;
  font-weight: 600;
  text-align: left;
  margin:10px 24px;
}
.itemdesc{
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.itemprice text{
  color: red
}