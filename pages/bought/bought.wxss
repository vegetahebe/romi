/* pages/bought/bought.wxss */

page {
  height: 100%;
  background: rgba(228, 228, 228, 0.911);
}

.container {
  height: fit-content;
}

.boughtTitle {
  width: 95%;
  height: 40px;
  background: darkblue;
  color: white;
  font-size: 22px;
  line-height: 40px;
  font-weight: 550;
  padding-left: 55px;
}

.boughtLessonnumber {
  width: 100%;
  height: 40px;
  background: darkblue;
  color: white;
  font-size: 18px;
  line-height: 40px;
  font-weight: 500;
  text-align: right;
  padding-right: 20px;
  position: fixed;
  bottom: 0px;
}

.myboughtBox {
  width: 95%;
  display: flex;
  background: white;
  margin: 5px;
  border-radius: 20px;
}

.myboughtImage {
  width: 49%;
  height: 110px;
  margin: 5px;
}

.myboughtText {
  margin: 2px;
  color: lightgray;
  font-size: 12px;
  font-weight: 400;
  width: 49%;
  padding: 2px 1px;
  flex-direction: row;
  justify-content: space-around;
}

.boughtLessonname {
  margin-top: 3px;
  margin-bottom: 10px;
  font-weight: 600;
  color: black;
  font-size: 13px;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.boughtLessoninfo {
  padding-left: 5px;
  margin-bottom: 4px;
  font-size: 13px;
}
